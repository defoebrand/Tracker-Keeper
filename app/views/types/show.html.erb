<div class="nav-icons">
  <p><%= link_to '<i class="fas fa-arrow-left"></i>'.html_safe, tracktions_path %></p>
</div>

<h1><%= @type.amount_type %></h1>
<h4>Total - <%= @type.tracktions.sum(:amount) %></h4>

<div class="view-display">
  <% @type.tracktions.sort_by{|x|x.name.downcase}.each do |track| %>
    <div class='group-cards'>
      <div>
        <p><%= (link_to track.groups.last.icon.html_safe, group_path(track.groups.last)) if  track.groups.first %></p>
        <p><%= track.groups.first ? (track.groups.last.name) : (link_to 'Assign', edit_tracktion_path(track) ) %></p>
        </div>
      <div class='card-text'>
        <h4><%= link_to track.name, tracktion_path(track) %></h4>
        <p><%= track.created_at.strftime("%d %b. %Y") %></p>
      </div>
      <div>
        <h4><%= track.amount %></h4>
        <span><%= track.author.name %></span>
      </div>
    </div>
  <% end %>
</div>
