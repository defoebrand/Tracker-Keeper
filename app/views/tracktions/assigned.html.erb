<div class="nav-icons">
  <p><%= link_to '<i class="fas fa-arrow-left"></i>'.html_safe, tracktions_path %></p>
</div>

<h1>Assigned</h1>
<div>
  <%= link_to 'All', tracktions_path %>
  <%= link_to 'Unassigned', unassigned_path %>
</div>

<div class="container sum-totals">
  <%=  transactions_count %>
</div>

<div class="view-display">
  <% @tracktions.sort_by{ |x| x.created_at }.reverse.each do |tracks| %>
    <div class='group-cards'>
      <%= link_to tracks.groups.first.icon.html_safe, tracks.groups.first %>
      <%= tracks.groups.first.name %>
      <div class='card-text'>
        <h4><%= link_to tracks.name, tracktion_path(tracks.id) %></h4>
        <p><%= tracks.created_at.strftime("%d %b. %Y") %></p>
      </div>
      <p><%= tracks.amount %><br>
        <%= tracks.type.amount_type %></p>
    </div>
  <% end %>
</div>

<div class='new-transaction'>
  <a href="/tracktions/new"><i class="fas fa-plus-square"><span>New Transaction</span></i></a>
</div>
