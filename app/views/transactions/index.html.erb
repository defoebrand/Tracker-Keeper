<div class="container sum-totals">
   <%=  transactions_count %>
</div>
<div>

     <h1>All Transactions</h1>
<div class="view-display">

 <% @transactions.sort_by{ |x| x.created_at }.reverse.each do |trans| %>
 <div class='group-cards'>
 <% if trans.group_id %>
   <%= link_to trans.group.icon.html_safe, trans.group %>
<% else %>
<%= link_to 'Assign', edit_transaction_path(trans) %>
<% end %>
   <div class='card-text'>
     <h4><%= link_to trans.name, transaction_path(trans.id) %></h4>
   <p><%= trans.created_at.strftime("%d %b. %Y") %></p>
   </div>
   <p><%= trans.amount %><br>
     <%= link_to trans.amount_type, show_type_path(trans.amount_type) %></p>
 </div>
<% end %>

 </div>
</div>

   <div class='new-transaction'>
     <a href="/transactions/new"><i class="fas fa-plus-square"><span>New Transaction</span></i></a>
   </div>



