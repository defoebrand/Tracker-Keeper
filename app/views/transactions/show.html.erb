<p id="notice"><%= notice %></p>
<h2><%= @transaction.name %></h2>
<%= icon?(@transaction) %>

<table>
  <thead>
    <tr>
      <th>Group:</th>
      <th>Amount:</th>
      <th>Type:</th>
      <th>Date:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <%= group?(@transaction) %>
        <td><%= @transaction.amount %></td>
        <td><%= @transaction.amount_type %></td>
        <td><%= @transaction.created_at.strftime("%d %b. %Y") %></td>
      </tr>
  </tbody>
</table>
<h4>Additional Groups</h4>
<div style='display:flex'>
<% @transaction.groups.each do |group|%>
<div class='container'>
<%= group.name %>
<%= link_to group.icon.html_safe, group_path(group.id) %>
</div>
<% end %>
</div>

<div>
  <%= link_to 'Edit', edit_transaction_path(@transaction) %> |  <%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= back(@transaction) %>
</div>
