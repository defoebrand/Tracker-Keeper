<p id="notice"><%= notice %></p>
<h2><%= @transaction.name %></h2>
<% if @transaction.group_id %>
<p><%= link_to @transaction.group.icon.html_safe, @transaction.group %></p>
<% else %>
<p></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Group:</th>
      <th></th>
      <th>Amount:</th>
      <th></th>
      <th>Date:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% if @transaction.group_id %>
          <td><%= @transaction.group.name %></td>
        <% else %>
          <td><%= link_to 'Assign', edit_transaction_path(@transaction) %> </td>
        <% end %>
        <td></td>
        <td><%= @transaction.amount %></td>
        <td></td>
        <td><%= @transaction.created_at.strftime("%d %b. %Y") %></td>
      </tr>
  </tbody>
</table>


<div>
  <%= link_to 'Edit', edit_transaction_path(@transaction) %> |  <%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', user_path(session[:user_id]) %>
</div>
