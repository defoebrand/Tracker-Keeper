<p id="notice"><%= notice %></p>
<h2><%= @transaction.name %></h2>
<%= icon?(@transaction) %>

<table>
  <thead>
    <tr>
      <th>Group:</th>
      <th>Amount:</th>
      <th>Type:</th>
      <th>Date:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <%= group?(@transaction) %>
        <td><%= @transaction.amount %></td>
        <td><%= @transaction.amount_type %></td>
        <td><%= @transaction.created_at.strftime("%d %b. %Y") %></td>
      </tr>
  </tbody>
</table>

<% @transaction.groups.each do |group|%>
<%= group.name %>
<% end %>

<div>
  <%= link_to 'Edit', edit_transaction_path(@transaction) %> |  <%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', transactions_path %>
</div>
