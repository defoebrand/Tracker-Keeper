<p id="notice"><%= notice %></p>

<div class="nav-icons">
  <p><%= link_to '<i class="fas fa-arrow-left"></i>'.html_safe, user_path(@user) %></p>
</div>

<main class="container">
  <h1>Tracker Keeper</h1>
  <br>
  <% @users.each do |user| %>
    <div style='display:flex'>
      <%= "ID: #{user.id}" %>
      <%= tag(:br) %>
      <%= "Name: #{user.name}" %>
      <%= user.avatar.attached? ? (image_tag user.avatar.variant(resize_to_limit: [100, 100])) : (image_tag '', size: "100x100", alt: 'No Image', style: 'border:1px solid black') %>
    </div>
  <% end %>
</main>
