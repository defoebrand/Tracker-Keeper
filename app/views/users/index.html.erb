<p id="notice"><%= notice %></p>
<main class="container">

<h1>Tracker Keeper</h1>
<br>

<% @users.each do |user| %>
<div style='display:flex'>
  <%= "ID: #{user.id}" %>
  <%= tag(:br) %>
  <%= "Name: #{user.name}" %>

  <%= image_tag user.avatar.variant(resize_to_limit: [100, 100]) %>
</div>
<% end %>

<p>
<%= link_to 'New User', new_user_path %> |
<%= link_to 'Log Out', logout_path %>
</p>





</main>
